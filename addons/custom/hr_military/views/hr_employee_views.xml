<odoo>
  <record id="hr_employee_form_inherit_military" model="ir.ui.view">
    <field name="name">hr.employee.form.inherit.military</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='personal_information']" position="inside">
        <group string="Військовий облік">
          <field name="is_reserved"/>
          <field name="is_mobilized"/>
          <field name="tck_sp_id"/>
          <field name="edrpvr_number"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
